#!/bin/bash 
# ------------------------------------------------------------------
# function:
#          display all tomcats and their categories 
# usages  :
#          ./.jseetom
# ------------------------------------------------------------------

cd /usr/local
for i in `ls -d tomcat*/ 2>/dev/null | sed -re "s/\/$//"`;do
    /root/mode/.jgettomp $i
done | 
sed -r -e "s/apache /apache0/" -e "s/tomcat6  /tomcat601/" -e "s/tomcat([1-9])  /tomcat0\1 /" -e "s/^([s|S]ingle *(tomcat[^ ]+))/1 \2 \1/" -e "s/^apache/2 apache apache/" |
sort | 
sed -r -e "s/^([^ ]+ *[^ ]+) //" -e "s/apache0/apache /" -e "s/tomcat601/tomcat6  /" -e "s/tomcat0([0-9]) /tomcat\1  /" |
grep -E "$1"

